<chain-7.xml>
  <default-scene>	DefaultScene	</default-scene>
  <initial-scene>	Hangar	</initial-scene>
  <scenes>
    <scene>	Hangar	  <gui-items>
        <gui-item>	FightButton	  <on-scene-effects>
            <activate>	FightButtonOnScene	</activate>
          </on-scene-effects>
          <not-on-scene-effects>
            <inactivate>	FightButtonOnScene	</inactivate>
          </not-on-scene-effects>
        </gui-item>
        <gui-item>	TankCarousel	  <on-scene-effects>
            <activate>	TankCarouselOnScene	</activate>
          </on-scene-effects>
          <not-on-scene-effects>
            <inactivate>	TankCarouselOnScene	</inactivate>
          </not-on-scene-effects>
        </gui-item>
      </gui-items>
      <post-effects>
        <clear-scene></clear-scene>
        <inactivate>	SelectPremiumVehicleHintClicked	</inactivate>
        <set-var>	SelectedVehicleSetter	</set-var>
        <set-var>	FirstFoundVehicleSetter	</set-var>
        <run-trigger>	RentedVehiclesTrigger	</run-trigger>
      </post-effects>
      <runtime-effects>
        <show-hint>	SelectPremiumVehicleHint	  <condition>
            <active>	TankCarouselOnScene	</active>
            <inactive>	PremiumVehicleSelected	</inactive>
            <var>	FirstFoundVehicleID	  <is-not-none></is-not-none>
            </var>
            <effect-not-triggered>	SelectPremiumVehicleHint	</effect-not-triggered>
          </condition>
        </show-hint>
        <show-hint>	NoPremiumVehicleHint	  <condition>
            <active>	TankCarouselOnScene	</active>
            <var>	FirstFoundVehicleID	  <is-none></is-none>
            </var>
            <effect-not-triggered>	NoPremiumVehicleHint	</effect-not-triggered>
          </condition>
        </show-hint>
        <show-hint>	FightButtonHint	  <condition>
            <active>	FightButtonOnScene	</active>
            <active>	PremiumVehicleSelected	</active>
            <var>	FirstFoundVehicleID	  <is-not-none></is-not-none>
            </var>
            <effect-not-triggered>	FightButtonHint	</effect-not-triggered>
          </condition>
        </show-hint>
      </runtime-effects>
    </scene>
    <scene>	DefaultScene	  <post-effects>
        <refuse-training></refuse-training>
      </post-effects>
      <runtime-effects></runtime-effects>
      <gui-items></gui-items>
    </scene>
  </scenes>
  <has-id>
    <game-attribute>	SelectedVehicleSetter	  <var-ref>	SelectedVehicleID	</var-ref>
      <name>	CurrentVehicleCD	</name>
    </game-attribute>
    <game-attribute>	FirstFoundVehicleSetter	  <var-ref>	FirstFoundVehicleID	</var-ref>
      <name>	PremiumVehicleCD	</name>
    </game-attribute>
    <click-outside-action>	TankCarouselClickOutSide	  <item-id>	TankCarousel	</item-id>
      <effects>
        <refuse-training></refuse-training>
      </effects>
    </click-outside-action>
    <hint>	SelectPremiumVehicleHint	  <item-id>	TankCarousel	</item-id>
      <text>	_(#tutorial:chain7/hint/selectPremiumVehicle)	</text>
      <arrow>
        <direction>	T	</direction>
        <loop>	True	</loop>
      </arrow>
      <actions>
        <click>	TankCarousel	  <effects>
            <close-hint>	SelectPremiumVehicleHint	</close-hint>
            <activate>	SelectPremiumVehicleHintClicked	</activate>
            <set-action>	TankCarouselClickOutSide	</set-action>
          </effects>
        </click>
        <click-outside>	TankCarousel	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </click-outside>
        <esc>	TankCarousel	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </esc>
      </actions>
    </hint>
    <hint>	NoPremiumVehicleHint	  <item-id>	TankCarousel	</item-id>
      <text>	_(#tutorial:chain7/hint/noPremiumVehicle)	</text>
      <arrow>
        <direction>	T	</direction>
        <loop>	True	</loop>
      </arrow>
      <actions>
        <click>	TankCarousel	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </click>
        <click-outside>	TankCarousel	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </click-outside>
        <esc>	TankCarousel	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </esc>
      </actions>
    </hint>
    <hint>	FightButtonHint	  <item-id>	FightButton	</item-id>
      <text>	_(#tutorial:chain7/hint/clickToFightButton)	</text>
      <arrow>
        <direction>	B	</direction>
        <loop>	True	</loop>
      </arrow>
      <actions>
        <click>	FightButton	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </click>
        <click-outside>	FightButton	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </click-outside>
        <esc>	FightButton	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </esc>
      </actions>
    </hint>
  </has-id>
  <triggers>
    <trigger>	RentedVehiclesTrigger	  <type>	rentedVehicles	</type>
      <on-effects>
        <set-var>	SelectedVehicleSetter	</set-var>
        <remove-action>	TankCarouselClickOutSide	</remove-action>
        <activate>	PremiumVehicleSelected	</activate>
      </on-effects>
      <off-effects>
        <inactivate>	PremiumVehicleSelected	</inactivate>
        <refuse-training>
          <condition>
            <active>	SelectPremiumVehicleHintClicked	</active>
          </condition>
        </refuse-training>
      </off-effects>
    </trigger>
  </triggers>
  <vars></vars>
</chain-7.xml>
