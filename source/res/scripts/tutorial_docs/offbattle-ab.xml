<offbattle-ab.xml>
  <default-scene>	DefaultScene	</default-scene>
  <initial-scene>	Hangar	</initial-scene>
  <scenes>
    <scene>	Hangar	  <post-effects>
        <inactivate>	ExitFromQueueClicked	</inactivate>
        <inactivate>	EnteringToQueue	</inactivate>
        <inactivate>	FinalWindowClosed	</inactivate>
        <inactivate>	NoResultsWindowClosed	</inactivate>
        <inactivate>	RestartTraining	</inactivate>
        <inactivate>	ShowMessageLocked	</inactivate>
        <run-trigger>	BonusesTrigger	</run-trigger>
        <run-trigger>	QueueTrigger	</run-trigger>
        <run-trigger>	ModeTrigger	</run-trigger>
        <request-all-bonuses>	AllBonuses	  <condition>
            <global-inactive>	_TutorialShowHistory	</global-inactive>
            <inactive>	InQueue	</inactive>
            <inactive>	BonusesReceived	</inactive>
          </condition>
        </request-all-bonuses>
      </post-effects>
      <runtime-effects>
        <inactivate>	FinalWindowClosed	  <condition>
            <global-active>	_TutorialIsFlagsReset	</global-active>
            <global-active>	_TutorialShowHistory	</global-active>
            <global-inactive>	_TutorialHistoryNotAvailable	</global-inactive>
          </condition>
        </inactivate>
        <inactivate>	NoResultsWindowClosed	  <condition>
            <global-active>	_TutorialIsFlagsReset	</global-active>
            <global-active>	_TutorialShowHistory	</global-active>
            <global-active>	_TutorialHistoryNotAvailable	</global-active>
          </condition>
        </inactivate>
        <global-inactivate>	_TutorialIsFlagsReset	</global-inactivate>
        <show-message>	BattleResultQuery	  <condition>
            <inactive>	ShowMessageLocked	</inactive>
            <global-inactive>	_TutorialShowHistory	</global-inactive>
            <active>	BonusesReceived	</active>
            <inactive>	InQueue	</inactive>
            <inactive>	RestartTraining	</inactive>
            <inactive>	FinalWindowClosed	</inactive>
          </condition>
        </show-message>
        <show-window>	NoResultsWindow	  <condition>
            <global-active>	_TutorialHistoryNotAvailable	</global-active>
            <inactive>	InQueue	</inactive>
            <inactive>	RestartTraining	</inactive>
            <inactive>	NoResultsWindowClosed	</inactive>
          </condition>
        </show-window>
        <show-window>	TutorialFinalWindow	  <condition>
            <global-inactive>	_TutorialHistoryNotAvailable	</global-inactive>
            <either>
              <active>	BonusesReceived	</active>
              <global-active>	_TutorialShowHistory	</global-active>
            </either>
            <inactive>	InQueue	</inactive>
            <inactive>	RestartTraining	</inactive>
            <inactive>	FinalWindowClosed	</inactive>
            <is-widow-closed>	TutorialFinalWindow	</is-widow-closed>
          </condition>
        </show-window>
        <show-dialog>	QueueDialog	  <condition>
            <active>	InQueue	</active>
          </condition>
        </show-dialog>
        <play-music>	MUSIC_EVENT_LOBBY	  <condition>
            <inactive>	RestartTraining	</inactive>
            <inactive>	InQueue	</inactive>
            <either>
              <active>	NoResultsWindowClosed	</active>
              <active>	FinalWindowClosed	</active>
            </either>
            <is-widow-closed>	TutorialFinalWindow	</is-widow-closed>
            <is-widow-closed>	NoResultsWindow	</is-widow-closed>
          </condition>
        </play-music>
        <refuse-training>
          <condition>
            <inactive>	RestartTraining	</inactive>
            <inactive>	InQueue	</inactive>
            <either>
              <active>	NoResultsWindowClosed	</active>
              <active>	FinalWindowClosed	</active>
            </either>
            <is-widow-closed>	TutorialFinalWindow	</is-widow-closed>
            <is-widow-closed>	NoResultsWindow	</is-widow-closed>
          </condition>
        </refuse-training>
      </runtime-effects>
      <gui-items></gui-items>
    </scene>
    <scene>	DefaultScene	  <post-effects>
        <refuse-training>
          <condition>
            <inactive>	RestartTraining	</inactive>
            <inactive>	InQueue	</inactive>
            <is-widow-closed>	TutorialFinalWindow	</is-widow-closed>
            <is-widow-closed>	NoResultsWindow	</is-widow-closed>
          </condition>
        </refuse-training>
      </post-effects>
      <runtime-effects></runtime-effects>
      <gui-items></gui-items>
    </scene>
  </scenes>
  <has-id>
    <query>	BattleResultQuery	  <type>	resultMessage	</type>
      <var-ref>	AllBonuses	</var-ref>
      <extra>	BATTLE_TUTORIAL_RESULTS_TYPE	</extra>
    </query>
    <window>	TutorialFinalWindow	  <type>	final	</type>
      <var-ref>	AllBonuses	</var-ref>
      <image>	../maps/tutorial/dialog-image-11.png	</image>
      <battle-hints>
        <text>	_(#battle_tutorial:windows/result/labels/battle-hints/first)	</text>
        <video-link>	_(#battle_tutorial:buttons/watch)	</video-link>
        <text>	_(#battle_tutorial:windows/result/labels/battle-hints/second1) &lt;font face="$TitleFont" color="#FFA759"&gt;_(#battle_tutorial:windows/result/labels/battle-hints/second2)&lt;/font&gt; _(#battle_tutorial:windows/result/labels/battle-hints/second3)	</text>
        <text>	_(#battle_tutorial:windows/result/labels/battle-hints/third1) &lt;font face="$TitleFont" color="#FFA759"&gt;_(#battle_tutorial:windows/result/labels/battle-hints/third2)&lt;/font&gt;_(#battle_tutorial:windows/result/labels/battle-hints/third3)	</text>
      </battle-hints>
      <restart-hint>	_(#battle_tutorial:windows/result/labels/restart-hint)	</restart-hint>
      <buttons>
        <close>	FinalWindowCloseButton	</close>
        <restart>	RestartTrainingButton	</restart>
        <show-video>	ShowVideoButton	</show-video>
      </buttons>
      <actions>
        <click>	RestartTrainingButton	  <effects>
            <play-music>	MUSIC_EVENT_LOBBY	</play-music>
            <activate>	RestartTraining	</activate>
            <enter-mode>	EnteringToMode	  <condition>
                <inactive>	InMode	</inactive>
                <inactive>	InQueue	</inactive>
                <global-active>	_TutorialModeIsAvailable	</global-active>
              </condition>
            </enter-mode>
          </effects>
        </click>
        <click>	FinalWindowCloseButton	  <effects>
            <activate>	FinalWindowClosed	</activate>
          </effects>
        </click>
        <click>	ShowVideoButton	  <effects>
            <activate>	ShowMessageLocked	</activate>
            <open-internal-browser>	guiSettingsXmlTag	</open-internal-browser>
          </effects>
        </click>
      </actions>
    </window>
    <window>	NoResultsWindow	  <type>	noResults	</type>
      <text>	_(#battle_tutorial:labels/results-are-not-available)	</text>
      <buttons>
        <close>	NoResultsWindowCloseButton	</close>
      </buttons>
      <actions>
        <click>	NoResultsWindowCloseButton	  <effects>
            <activate>	NoResultsWindowClosed	</activate>
          </effects>
        </click>
      </actions>
    </window>
    <dialog>	QueueDialog	  <type>	queue	</type>
      <var-ref>	AvgWaitingTime	</var-ref>
      <title>	_(#battle_tutorial:dialogs/queue/title)	</title>
      <text>	&lt;font color="#FF0000"&gt;_(#battle_tutorial:dialogs/queue/server-overloaded/text)&lt;/font&gt;&lt;br/&gt;_(#battle_tutorial:dialogs/queue/wait/text)&lt;br/&gt;&lt;br/&gt;	</text>
      <player-time-text>
        <start>	_(#battle_tutorial:labels/player-waiting-time) &lt;b&gt;	</start>
        <end>	&lt;/b&gt;&lt;br/&gt;	</end>
      </player-time-text>
      <avg-time-text>	&lt;i&gt;_(#battle_tutorial:labels/avg-waiting-time)&lt;/i&gt;	</avg-time-text>
      <time-pointcuts>
        <pointcut>	1	</pointcut>
        <pointcut>	3	</pointcut>
        <pointcut>	5	</pointcut>
        <pointcut>	10	</pointcut>
        <pointcut>	15	</pointcut>
        <pointcut>	30	</pointcut>
      </time-pointcuts>
      <buttons>
        <submit>	ExitFromQueue	</submit>
        <cancel>	ExitFromQueue	</cancel>
      </buttons>
      <actions>
        <click>	ExitFromQueue	  <effects>
            <activate>	ExitFromQueueClicked	</activate>
            <exit-queue>	EnteringToBattle	</exit-queue>
          </effects>
        </click>
      </actions>
    </dialog>
  </has-id>
  <triggers>
    <trigger>	BonusesTrigger	  <type>	allBonuses	</type>
      <set-var>	AllBonuses	</set-var>
      <on-effects>
        <activate>	BonusesReceived	</activate>
      </on-effects>
      <off-effects>
        <inactivate>	BonusesReceived	</inactivate>
      </off-effects>
    </trigger>
    <trigger>	ModeTrigger	  <type>	mode	</type>
      <on-effects>
        <activate>	InMode	</activate>
      </on-effects>
      <off-effects>
        <inactivate>	InMode	</inactivate>
      </off-effects>
    </trigger>
    <trigger>	QueueTrigger	  <type>	queue	</type>
      <pop-up>	QueueDialog	</pop-up>
      <on-effects>
        <activate>	InQueue	</activate>
        <show-dialog>	QueueDialog	</show-dialog>
      </on-effects>
      <off-effects>
        <inactivate>	InQueue	</inactivate>
        <refuse-training>
          <condition>
            <active>	ExitFromQueueClicked	</active>
          </condition>
        </refuse-training>
      </off-effects>
    </trigger>
  </triggers>
  <vars></vars>
</offbattle-ab.xml>
