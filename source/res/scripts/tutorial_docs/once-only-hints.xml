<once-only-hints.xml>
  <gui>	gui/tutorial-lobby-gui.xml	</gui>
  <hints>
    <hint>	FalloutQuestsTab	  <item-id>	FalloutQuestsTabButton	</item-id>
      <text>	_(#tutorial:onceOnlyHints/falloutQuestsTab)	</text>
      <arrow>
        <direction>	B	</direction>
        <loop>	True	</loop>
      </arrow>
    </hint>
    <hint>	CustomizationSlotsHint	  <item-id>	CustomizationSlots	</item-id>
      <text>	_(#tutorial:customization/slots)	</text>
      <arrow>
        <direction>	T	</direction>
        <loop>	True	</loop>
      </arrow>
    </hint>
    <hint>	CustomizationAutoprolongationHint	  <item-id>	CustomizationAutoprolongation	</item-id>
      <text>	_(#tutorial:customization/autoprolongation)	</text>
      <arrow>
        <direction>	R	</direction>
        <loop>	True	</loop>
      </arrow>
    </hint>
    <hint>	ShopTradeInHint	  <item-id>	ShopTradeIn	</item-id>
      <text>	_(#tutorial:tradeIn/shop)	</text>
      <arrow>
        <direction>	R	</direction>
        <loop>	True	</loop>
      </arrow>
      <condition>
        <service>	ITradeInController	  <path>	skeletons.gui.game_control	</path>
        </service>
      </condition>
    </hint>
    <hint>	VehCompareConfigHint	  <item-id>	VehCompareConfig	</item-id>
      <text>	_(#veh_compare:vehConf/confAvailable)	</text>
      <arrow>
        <direction>	L	</direction>
        <loop>	True	</loop>
      </arrow>
      <update-runtime>	True	</update-runtime>
    </hint>
    <hint>	HoldSheetHint	  <item-id>	HoldSheetBtn	</item-id>
      <text>	_(#quests:quest/chain/hint/holdAwardSheet)	</text>
      <arrow>
        <direction>	R	</direction>
        <loop>	True	</loop>
      </arrow>
      <condition>
        <global-active>	_MayPawnPersonalMission	</global-active>
      </condition>
      <equal-actions>	True	</equal-actions>
    </hint>
    <hint>	PauseHint	  <item-id>	PauseHintBtn	</item-id>
      <text>	_(#quests:quest/chain/hint/pause)	</text>
      <arrow>
        <direction>	L	</direction>
        <loop>	True	</loop>
      </arrow>
      <equal-actions>	True	</equal-actions>
    </hint>
    <hint>	HaveNewBadgeHint	  <item-id>	NewBadgeHintBtn	</item-id>
      <text>	_(#menu:header/account/popover/tutorial/newBadge)	</text>
      <arrow>
        <direction>	B	</direction>
        <loop>	True	</loop>
      </arrow>
      <condition>
        <global-active>	_HaveNewBadge	</global-active>
      </condition>
      <equal-actions>	True	</equal-actions>
    </hint>
    <hint>	HaveNewSuffixBadgeHint	  <item-id>	NewBadgeHintBtn	</item-id>
      <text>	_(#menu:header/account/popover/tutorial/newSuffixBadge)	</text>
      <arrow>
        <direction>	B	</direction>
        <loop>	True	</loop>
      </arrow>
      <condition>
        <global-active>	_HaveNewSuffixBadge	</global-active>
      </condition>
      <equal-actions>	True	</equal-actions>
    </hint>
    <hint>	BadgePageNewSuffixBadgeHint	  <item-id>	NewBadgeHintCheckBox	</item-id>
      <text>	_(#menu:badgePage/tutorial/newSuffixBadge)	</text>
      <arrow>
        <direction>	B	</direction>
        <loop>	True	</loop>
      </arrow>
      <condition>
        <global-active>	_BadgePageHasNewSuffixBadge	</global-active>
      </condition>
      <equal-actions>	True	</equal-actions>
    </hint>
    <hint>	EpicReservesSlotHint	  <item-id>	EpicReservesSlot	</item-id>
      <text>	_(#epic_battle:tutorial/hint/epicReservesSlotHint)	</text>
      <arrow>
        <direction>	T	</direction>
        <loop>	True	</loop>
      </arrow>
      <equal-actions>	True	</equal-actions>
    </hint>
    <hint>	EpicReservesBtnHint	  <item-id>	EpicReservesBtn	</item-id>
      <text>	_(#epic_battle:tutorial/hint/epicReservesBtnHint)	</text>
      <arrow>
        <direction>	L	</direction>
        <loop>	True	</loop>
      </arrow>
      <equal-actions>	True	</equal-actions>
    </hint>
    <hint>	BlueprintsSwitchButtonHint	  <item-id>	BlueprintsSwitchButton	</item-id>
      <text>	_(#tutorial:blueprints/techtree/switchButton)	</text>
      <arrow>
        <direction>	R	</direction>
        <loop>	True	</loop>
      </arrow>
      <checked-ui-state>
        <simple-state>
          <state>	enabled	</state>
          <value>	True	</value>
        </simple-state>
      </checked-ui-state>
      <update-runtime>	True	</update-runtime>
      <ignore-outside-click>	True	</ignore-outside-click>
    </hint>
    <hint>	BlueprintsResearchButtonHint	  <item-id>	BlueprintsResearchButton	</item-id>
      <text>	_(#tutorial:blueprints/research/blueprintButton)	</text>
      <arrow>
        <direction>	L	</direction>
        <loop>	True	</loop>
      </arrow>
      <checked-ui-state>
        <simple-state>
          <state>	visible	</state>
          <value>	True	</value>
        </simple-state>
      </checked-ui-state>
      <ignore-outside-click>	True	</ignore-outside-click>
      <update-runtime>	True	</update-runtime>
    </hint>
    <hint>	BlueprintsTechtreeConvertButtonHint	  <item-id>	BlueprintsTechtreeConvertButton	</item-id>
      <text>	_(#tutorial:blueprints/convertButton)	</text>
      <arrow>
        <direction>	L	</direction>
        <loop>	True	</loop>
      </arrow>
      <checked-ui-state>
        <simple-state>
          <state>	enabled	</state>
          <value>	True	</value>
        </simple-state>
      </checked-ui-state>
      <condition>
        <condition-hint-showed>
          <hint-id>	BlueprintsResearchConvertButtonHint	</hint-id>
          <value>	False	</value>
        </condition-hint-showed>
      </condition>
      <update-runtime>	True	</update-runtime>
      <check-view-area>	True	</check-view-area>
      <ignore-outside-click>	True	</ignore-outside-click>
    </hint>
    <hint>	BlueprintsResearchConvertButtonHint	  <item-id>	BlueprintsResearchConvertButton	</item-id>
      <text>	_(#tutorial:blueprints/convertButton)	</text>
      <arrow>
        <direction>	R	</direction>
        <loop>	True	</loop>
      </arrow>
      <checked-ui-state>
        <simple-state>
          <state>	enabled	</state>
          <value>	True	</value>
        </simple-state>
      </checked-ui-state>
      <condition>
        <condition-and>
          <condition-hint-showed>
            <hint-id>	BlueprintsTechtreeConvertButtonHint	</hint-id>
            <value>	False	</value>
          </condition-hint-showed>
          <condition-hint-showed>
            <hint-id>	BlueprintsResearchButtonHint	</hint-id>
            <value>	True	</value>
          </condition-hint-showed>
        </condition-and>
      </condition>
      <update-runtime>	True	</update-runtime>
      <ignore-outside-click>	True	</ignore-outside-click>
    </hint>
    <hint>	BlueprintScreenConvertFragmentHint	  <item-id>	BlueprintScreenConvertFragment	</item-id>
      <text>	_(#tutorial:blueprints/blueprintScreen/fragmentItem)	</text>
      <arrow>
        <direction>	R	</direction>
        <loop>	True	</loop>
      </arrow>
      <update-runtime>	True	</update-runtime>
      <ignore-outside-click>	False	</ignore-outside-click>
      <equal-actions>	True	</equal-actions>
    </hint>
  </hints>
</once-only-hints.xml>
