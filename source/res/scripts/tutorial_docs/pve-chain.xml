<pve-chain.xml>
  <default-scene>	DefaultScene	</default-scene>
  <initial-scene>	DefaultScene	</initial-scene>
  <scenes>
    <scene>	DefaultScene	  <post-effects>
        <switch-to-random></switch-to-random>
      </post-effects>
      <runtime-effects></runtime-effects>
      <gui-items>
        <gui-item>	BattleSelectorBar	  <on-scene-effects>
            <show-hint>	BattleSelectorHint	</show-hint>
          </on-scene-effects>
        </gui-item>
      </gui-items>
    </scene>
  </scenes>
  <has-id>
    <hint>	BattleSelectorHint	  <item-id>	BattleSelectorBar	</item-id>
      <text>	_(#tutorial:pveChain/hint/selector)	</text>
      <arrow>
        <direction>	B	</direction>
        <loop>	False	</loop>
      </arrow>
      <actions>
        <click>	BattleSelectorBar	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </click>
        <click-outside>	BattleSelectorBar	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </click-outside>
        <esc>	BattleSelectorBar	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </esc>
      </actions>
    </hint>
  </has-id>
  <triggers></triggers>
  <vars></vars>
</pve-chain.xml>
