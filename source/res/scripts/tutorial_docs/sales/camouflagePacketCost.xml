<camouflagePacketCost.xml>
  <default-scene>	DefaultScene	</default-scene>
  <initial-scene>	Hangar	</initial-scene>
  <scenes>
    <scene>	Hangar	  <post-effects></post-effects>
      <runtime-effects>
        <show-hint>	TuningBtnHint	  <condition>
            <active>	TuningBtnOnScene	</active>
          </condition>
        </show-hint>
        <refuse-training>
          <condition>
            <effect-triggered>	CustomizationGroupHint	</effect-triggered>
          </condition>
        </refuse-training>
      </runtime-effects>
      <gui-items>
        <gui-item>	TuningBtn	  <on-scene-effects>
            <activate>	TuningBtnOnScene	</activate>
          </on-scene-effects>
          <not-on-scene-effects>
            <inactivate>	TuningBtnOnScene	</inactivate>
          </not-on-scene-effects>
        </gui-item>
      </gui-items>
    </scene>
    <scene>	VehicleCustomization	  <post-effects>
        <set-gui-item-criteria>	SlotsTypeCriteria	  <condition>
            <var>	SlotsType	  <is-not-none></is-not-none>
            </var>
            <effect-not-triggered>	SlotsTypeCriteria	</effect-not-triggered>
          </condition>
        </set-gui-item-criteria>
      </post-effects>
      <runtime-effects>
        <show-hint>	CustomizationGroupHint	  <condition>
            <active>	CustomizationGroupOnScene	</active>
          </condition>
        </show-hint>
      </runtime-effects>
      <gui-items>
        <gui-item>	CustomizationGroup	  <on-scene-effects>
            <activate>	CustomizationGroupOnScene	</activate>
          </on-scene-effects>
          <not-on-scene-effects>
            <inactivate>	CustomizationGroupOnScene	</inactivate>
          </not-on-scene-effects>
        </gui-item>
      </gui-items>
    </scene>
    <scene>	DefaultScene	  <post-effects>
        <refuse-training></refuse-training>
      </post-effects>
      <runtime-effects></runtime-effects>
      <gui-items></gui-items>
    </scene>
  </scenes>
  <has-id>
    <gui-item-criteria>	SlotsTypeCriteria	  <item-id>	FindSlotsType	</item-id>
      <value>	id=$SlotsType$	</value>
      <cached>	True	</cached>
    </gui-item-criteria>
    <hint>	CustomizationGroupHint	  <item-id>	CustomizationGroup	</item-id>
      <text>	#quests:action/chain/hint/camouflages	</text>
      <arrow>
        <direction>	T	</direction>
        <loop>	True	</loop>
      </arrow>
      <padding>
        <left>	-7	</left>
        <top>	0	</top>
        <right>	0	</right>
        <bottom>	40	</bottom>
      </padding>
      <actions>
        <click>	CustomizationGroup	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </click>
        <click-outside>	CustomizationGroup	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </click-outside>
        <esc>	CustomizationGroup	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </esc>
      </actions>
    </hint>
    <hint>	TuningBtnHint	  <item-id>	TuningBtn	</item-id>
      <text>	#quests:action/chain/hint/customization	</text>
      <arrow>
        <direction>	T	</direction>
        <loop>	True	</loop>
      </arrow>
      <padding>
        <left>	-5	</left>
        <top>	-5	</top>
        <right>	-3	</right>
        <bottom>	-3	</bottom>
      </padding>
      <actions>
        <click>	TuningBtn	  <effects>
            <activate>	TuningBtnClicked	</activate>
          </effects>
        </click>
        <click-outside>	TuningBtn	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </click-outside>
        <esc>	TuningBtn	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </esc>
      </actions>
    </hint>
  </has-id>
  <triggers></triggers>
  <vars>
    <var-set>	SlotsType	  <asInt>	0	</asInt>
    </var-set>
  </vars>
</camouflagePacketCost.xml>
