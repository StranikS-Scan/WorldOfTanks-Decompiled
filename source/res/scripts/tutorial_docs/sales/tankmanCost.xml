<tankmanCost.xml>
  <default-scene>	DefaultScene	</default-scene>
  <initial-scene>	Hangar	</initial-scene>
  <scenes>
    <scene>	Hangar	  <post-effects></post-effects>
      <runtime-effects>
        <show-hint>	CrewOperationBtnHint	  <condition>
            <global-inactive>	_HaveCurrentFootballVehicle	</global-inactive>
            <active>	CrewOperationBtnOnScene	</active>
          </condition>
        </show-hint>
      </runtime-effects>
      <gui-items>
        <gui-item>	CrewOperationBtn	  <on-scene-effects>
            <global-inactive>	_HaveCurrentFootballVehicle	</global-inactive>
            <activate>	CrewOperationBtnOnScene	</activate>
          </on-scene-effects>
          <not-on-scene-effects>
            <global-active>	_HaveCurrentFootballVehicle	</global-active>
            <inactivate>	CrewOperationBtnOnScene	</inactivate>
          </not-on-scene-effects>
        </gui-item>
      </gui-items>
    </scene>
    <scene>	DefaultScene	  <post-effects>
        <refuse-training></refuse-training>
      </post-effects>
      <runtime-effects></runtime-effects>
      <gui-items></gui-items>
    </scene>
  </scenes>
  <has-id>
    <hint>	CrewOperationBtnHint	  <item-id>	CrewOperationBtn	</item-id>
      <text>	#quests:action/chain/hint/crewRetraining	</text>
      <arrow>
        <direction>	R	</direction>
        <loop>	True	</loop>
      </arrow>
      <padding>
        <left>	-5	</left>
        <top>	-5	</top>
        <right>	-5	</right>
        <bottom>	-5	</bottom>
      </padding>
      <actions>
        <click>	CrewOperationBtn	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </click>
        <click-outside>	CrewOperationBtn	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </click-outside>
        <esc>	CrewOperationBtn	  <effects>
            <refuse-training></refuse-training>
          </effects>
        </esc>
      </actions>
    </hint>
  </has-id>
  <triggers></triggers>
  <vars></vars>
</tankmanCost.xml>
