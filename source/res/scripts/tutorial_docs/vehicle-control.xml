<vehicle-control.xml>
  <scenes>
    <scene>	Battle	  <gui-items></gui-items>
      <post-effects>
        <show-greeting>	GreetingMessage	</show-greeting>
        <run-trigger>	Bot1OnArenaTrigger	</run-trigger>
        <run-trigger>	Bot2OnArenaTrigger	</run-trigger>
        <run-trigger>	Bot3OnArenaTrigger	</run-trigger>
        <run-trigger>	GlobalEventsDispatcher	</run-trigger>
      </post-effects>
      <runtime-effects>
        <activate>	Object1FocusOn	  <condition>
            <active>	Object1FocusOnEnabled	</active>
            <active>	InPoint1	</active>
          </condition>
        </activate>
        <show-marker>	MarkerForPoint1	  <condition>
            <inactive>	InPoint1	</inactive>
            <either>
              <inactive>	Object1FocusOn	</inactive>
              <inactive>	Object2FocusOn	</inactive>
            </either>
          </condition>
        </show-marker>
        <next-task>	MoveToPoint1Task	  <condition>
            <inactive>	InPoint1	</inactive>
            <either>
              <inactive>	Object1FocusOn	</inactive>
              <inactive>	Object2FocusOn	</inactive>
            </either>
          </condition>
        </next-task>
        <show-marker>	MarkerForObject1	  <condition>
            <active>	InPoint1	</active>
            <inactive>	Object1FocusOn	</inactive>
          </condition>
        </show-marker>
        <next-task>	Object1FocusOnTask	  <condition>
            <active>	InPoint1	</active>
            <inactive>	Object1FocusOn	</inactive>
          </condition>
        </next-task>
        <show-hint>	CameraControl1Hint	  <condition>
            <active>	InPoint1	</active>
            <either>
              <inactive>	Object1FocusOn	</inactive>
              <inactive>	Object2FocusOn	</inactive>
            </either>
          </condition>
        </show-hint>
        <show-marker>	MarkerForObject2	  <condition>
            <active>	InPoint1	</active>
            <active>	Object1FocusOn	</active>
            <inactive>	Object2FocusOn	</inactive>
          </condition>
        </show-marker>
        <next-task>	Object2FocusOnTask	  <condition>
            <active>	InPoint1	</active>
            <active>	Object1FocusOn	</active>
            <inactive>	Object2FocusOn	</inactive>
          </condition>
        </next-task>
        <show-hint>	CameraControl2Hint	  <condition>
            <active>	InPoint1	</active>
            <active>	Object1FocusOn	</active>
            <inactive>	Object2FocusOn	</inactive>
          </condition>
        </show-hint>
        <show-marker>	MarkerForPoint2	  <condition>
            <active>	Object1FocusOn	</active>
            <active>	Object2FocusOn	</active>
            <inactive>	InPoint2	</inactive>
          </condition>
        </show-marker>
        <next-task>	MoveToPoint2Task	  <condition>
            <active>	Object1FocusOn	</active>
            <active>	Object2FocusOn	</active>
            <inactive>	InPoint2	</inactive>
          </condition>
        </next-task>
        <show-hint>	ReturnToPoint1Hint	  <condition>
            <inactive>	InPoint1	</inactive>
            <either>
              <inactive>	Object1FocusOn	</inactive>
              <inactive>	Object2FocusOn	</inactive>
            </either>
          </condition>
        </show-hint>
        <show-hint>	VehicleMovement1Hint	  <condition>
            <active>	Object1FocusOn	</active>
            <active>	Object2FocusOn	</active>
            <inactive>	InPoint2	</inactive>
          </condition>
        </show-hint>
        <show-hint>	VehicleMovement2Hint	  <condition>
            <active>	Object1FocusOn	</active>
            <active>	Object2FocusOn	</active>
            <active>	InPoint2	</active>
            <inactive>	InPoint3	</inactive>
          </condition>
        </show-hint>
        <show-marker>	MarkerForPoint3	  <condition>
            <active>	Object1FocusOn	</active>
            <active>	Object2FocusOn	</active>
            <active>	InPoint2	</active>
            <inactive>	InPoint3	</inactive>
          </condition>
        </show-marker>
        <next-task>	MoveToPoint3Task	  <condition>
            <active>	Object1FocusOn	</active>
            <active>	Object2FocusOn	</active>
            <active>	InPoint2	</active>
            <inactive>	InPoint3	</inactive>
          </condition>
        </next-task>
        <show-hint>	VehicleControlDoneHint	  <condition>
            <active>	InPoint3	</active>
          </condition>
        </show-hint>
        <request-bonus>
          <condition>
            <either>
              <active>	InPoint3	</active>
              <active>	Bot1Destroyed	</active>
              <active>	Bot2Destroyed	</active>
              <active>	Bot3Destroyed	</active>
            </either>
          </condition>
        </request-bonus>
        <request-bonus>	DestroyBot1	  <condition>
            <active>	Bot1Destroyed	</active>
          </condition>
        </request-bonus>
        <request-bonus>	DestroyBot2	  <condition>
            <active>	Bot2Destroyed	</active>
          </condition>
        </request-bonus>
        <request-bonus>	DestroyBot3	  <condition>
            <active>	Bot3Destroyed	</active>
          </condition>
        </request-bonus>
        <next-chapter>	VehicleControlDone	  <condition>
            <either>
              <active>	InPoint3	</active>
            </either>
          </condition>
        </next-chapter>
        <next-chapter>	VehicleControlAutoCompleted	  <condition>
            <either>
              <active>	Bot1Destroyed	</active>
              <active>	Bot2Destroyed	</active>
              <active>	Bot3Destroyed	</active>
            </either>
          </condition>
        </next-chapter>
      </runtime-effects>
    </scene>
  </scenes>
  <has-id>
    <exit>	VehicleControlDone	  <next-delay>	3	</next-delay>
      <chapter-id>	DestroyBot1	</chapter-id>
    </exit>
    <exit>	VehicleControlAutoCompleted	  <next-delay>	0	</next-delay>
      <chapter-id></chapter-id>
    </exit>
    <progress>	VehicleControl	  <steps>
        <condition>	Step1InProgress	  <active>	Object1FocusOn	</active>
        </condition>
        <condition>	Step2InProgress	  <active>	Object2FocusOn	</active>
        </condition>
        <condition>	Step3InProgress	  <active>	InPoint2	</active>
        </condition>
        <condition>	Step4InProgress	  <active>	InPoint3	</active>
        </condition>
      </steps>
    </progress>
    <task>	MoveToPoint1Task	  <flag>	InPoint1	</flag>
      <text>	_(#battle_tutorial:tasks-panel/return-to-point-1/text)	</text>
    </task>
    <task>	Object1FocusOnTask	  <text>	_(#battle_tutorial:tasks-panel/focus-on-object-1/text)	</text>
    </task>
    <task>	Object2FocusOnTask	  <flag>	Object1FocusOn	</flag>
      <text>	_(#battle_tutorial:tasks-panel/focus-on-object-2/text)	</text>
    </task>
    <task>	MoveToPoint2Task	  <flag>	Object2FocusOn	</flag>
      <text>	_(#battle_tutorial:tasks-panel/move-to-point-2/text)	</text>
    </task>
    <task>	MoveToPoint3Task	  <flag>	InPoint2	</flag>
      <text>	_(#battle_tutorial:tasks-panel/move-to-point-3/text)	</text>
    </task>
    <greeting>	GreetingMessage	  <title>	_(#battle_tutorial:chapters/greeting/title)	</title>
      <text>	_(#battle_tutorial:chapters/greeting/description)	</text>
      <speak>	/tutorial_voice/tutorial_voice/welcome	</speak>
      <wwspeak>	welcome	</wwspeak>
    </greeting>
    <hint>	CameraControl1Hint	  <text>	_(#battle_tutorial:hints/camera-control/text)	</text>
      <image-ref>	BattleHintImage01	</image-ref>
      <speak>	/tutorial_voice/tutorial_voice/mouse_01	</speak>
      <wwspeak>	mouse_01	</wwspeak>
    </hint>
    <hint>	CameraControl2Hint	  <text>	_(#battle_tutorial:hints/camera-control/text)	</text>
      <image-ref>	BattleHintImage01	</image-ref>
      <speak>	/tutorial_voice/tutorial_voice/medicine	</speak>
      <wwspeak>	medicine	</wwspeak>
    </hint>
    <hint>	ReturnToPoint1Hint	  <text>	_(#battle_tutorial:hints/vehicle-movement/text)	</text>
      <image-ref>	BattleHintImage02	</image-ref>
      <speak>	/tutorial_voice/tutorial_voice/return_01	</speak>
      <wwspeak>	return_01	</wwspeak>
    </hint>
    <hint>	VehicleMovement1Hint	  <text>	_(#battle_tutorial:hints/vehicle-movement/text)	</text>
      <image>	../maps/tutorial/battle-hint-00.png	</image>
      <speak>	/tutorial_voice/tutorial_voice/point	</speak>
      <wwspeak>	point	</wwspeak>
    </hint>
    <hint>	VehicleMovement2Hint	  <text>	_(#battle_tutorial:hints/vehicle-movement/text)	</text>
      <image-ref>	BattleHintImage04	</image-ref>
      <speak>	/tutorial_voice/tutorial_voice/objects	</speak>
      <wwspeak>	objects	</wwspeak>
    </hint>
    <hint>	VehicleControlDoneHint	  <text>	_(#battle_tutorial:hints/vehicle-control-done/text)	</text>
      <image></image>
      <speak>	/tutorial_voice/tutorial_voice/control	</speak>
      <wwspeak>	control	</wwspeak>
    </hint>
    <marker>	MarkerForObject1	  <type>	aim	</type>
      <var-ref>	Object1Name	</var-ref>
      <world>
        <shape>	eye	</shape>
        <min-distance>	0	</min-distance>
        <max-distance>	0	</max-distance>
        <offset>	0 4.5 0	</offset>
      </world>
    </marker>
    <marker>	MarkerForObject2	  <type>	aim	</type>
      <var-ref>	Object2Name	</var-ref>
      <world>
        <shape>	eye	</shape>
        <min-distance>	0	</min-distance>
        <max-distance>	0	</max-distance>
        <offset>	0 3.5 0	</offset>
      </world>
    </marker>
    <marker>	MarkerForPoint1	  <type>	area	</type>
      <var-ref>	Point1Name	</var-ref>
      <model>
        <path>	content/Interface/Arrow/normal/lod0/arrow.model	</path>
        <action>	ArrowAnimAction	</action>
        <offset>	1 4.5 0	</offset>
      </model>
      <ground>
        <path>	content/Interface/CheckPoint/CheckPoint_green.model	</path>
        <action></action>
        <offset>	0 0.2 0	</offset>
      </ground>
      <world>
        <shape>	arrow	</shape>
        <min-distance>	50	</min-distance>
        <max-distance>	60	</max-distance>
        <offset>	0 9 0	</offset>
      </world>
    </marker>
    <marker>	MarkerForPoint2	  <type>	area	</type>
      <var-ref>	Point2Name	</var-ref>
      <model>
        <path>	content/Interface/Arrow/normal/lod0/arrow.model	</path>
        <action>	ArrowAnimAction	</action>
        <offset>	1 4.5 0	</offset>
      </model>
      <ground>
        <path>	content/Interface/CheckPoint/CheckPoint_green.model	</path>
        <action></action>
        <offset>	0 0.2 0	</offset>
      </ground>
      <world>
        <shape>	arrow	</shape>
        <min-distance>	50	</min-distance>
        <max-distance>	60	</max-distance>
        <offset>	0 9 0	</offset>
      </world>
    </marker>
    <marker>	MarkerForPoint3	  <type>	area	</type>
      <var-ref>	Point3Name	</var-ref>
      <model>
        <path>	content/Interface/Arrow/normal/lod0/arrow.model	</path>
        <action>	ArrowAnimAction	</action>
        <offset>	1 4.5 0	</offset>
      </model>
      <ground>
        <path>	content/Interface/CheckPoint/CheckPoint_green.model	</path>
        <action></action>
        <offset>	0 0.2 0	</offset>
      </ground>
      <world>
        <shape>	arrow	</shape>
        <min-distance>	50	</min-distance>
        <max-distance>	60	</max-distance>
        <offset>	0 9 0	</offset>
      </world>
    </marker>
    <image>	BattleHintImage01	  <type>	vehicle	</type>
      <value>	battle-hint-01.png	</value>
      <path-ref>	ImagePath	</path-ref>
      <default-ref>	DefaultVehicleInImages	</default-ref>
    </image>
    <image>	BattleHintImage02	  <type>	vehicle	</type>
      <value>	battle-hint-02.png	</value>
      <path-ref>	ImagePath	</path-ref>
      <default-ref>	DefaultVehicleInImages	</default-ref>
    </image>
    <image>	BattleHintImage04	  <type>	vehicle	</type>
      <value>	battle-hint-04.png	</value>
      <path-ref>	ImagePath	</path-ref>
      <default-ref>	DefaultVehicleInImages	</default-ref>
    </image>
  </has-id>
  <triggers>
    <trigger>	Bot1OnArenaTrigger	  <type>	vehOnArena	</type>
      <validate-var>	Bot1Name	</validate-var>
      <set-var>	Bot1VehicleID	</set-var>
      <on-effects>
        <activate>	Bot1OnArena	</activate>
      </on-effects>
      <off-effects>
        <inactivate>	Bot1OnArena	</inactivate>
      </off-effects>
    </trigger>
    <trigger>	Bot2OnArenaTrigger	  <type>	vehOnArena	</type>
      <validate-var>	Bot2Name	</validate-var>
      <set-var>	Bot2VehicleID	</set-var>
      <on-effects>
        <activate>	Bot2OnArena	</activate>
      </on-effects>
      <off-effects>
        <inactivate>	Bot2OnArena	</inactivate>
      </off-effects>
    </trigger>
    <trigger>	Bot3OnArenaTrigger	  <type>	vehOnArena	</type>
      <validate-var>	Bot3Name	</validate-var>
      <set-var>	Bot3VehicleID	</set-var>
      <on-effects>
        <activate>	Bot3OnArena	</activate>
      </on-effects>
      <off-effects>
        <inactivate>	Bot3OnArena	</inactivate>
      </off-effects>
    </trigger>
    <trigger>	AIMRObject1Trigger	  <type>	aim	</type>
      <validate-var>	Object1Name	</validate-var>
      <on-effects>
        <activate>	Object1FocusOnEnabled	</activate>
        <remove-marker>	MarkerForObject1	</remove-marker>
      </on-effects>
      <off-effects></off-effects>
    </trigger>
    <trigger>	AIMRObject2Trigger	  <type>	aim	</type>
      <validate-var>	Object2Name	</validate-var>
      <on-effects>
        <activate>	Object2FocusOn	  <condition>
            <active>	Object1FocusOn	</active>
            <active>	InPoint1	</active>
          </condition>
        </activate>
        <activate>	MoveToPoint2	  <condition>
            <active>	Object1FocusOn	</active>
            <active>	InPoint1	</active>
          </condition>
        </activate>
        <remove-marker>	MarkerForObject2	</remove-marker>
      </on-effects>
      <off-effects></off-effects>
    </trigger>
    <trigger>	Point1Trigger	  <type>	area	</type>
      <validate-var>	Point1Name	</validate-var>
      <on-effects>
        <activate>	InPoint1	  <condition>
            <either>
              <inactive>	Object1FocusOn	</inactive>
              <inactive>	Object2FocusOn	</inactive>
            </either>
          </condition>
        </activate>
        <remove-marker>	MarkerForPoint1	</remove-marker>
      </on-effects>
      <off-effects>
        <inactivate>	InPoint1	  <condition>
            <either>
              <inactive>	Object1FocusOn	</inactive>
              <inactive>	Object2FocusOn	</inactive>
            </either>
          </condition>
        </inactivate>
        <remove-marker>	MarkerForObject1	</remove-marker>
        <remove-marker>	MarkerForObject2	</remove-marker>
      </off-effects>
    </trigger>
    <trigger>	Point2Trigger	  <type>	area	</type>
      <validate-var>	Point2Name	</validate-var>
      <on-effects>
        <activate>	InPoint2	  <condition>
            <active>	Object2FocusOn	</active>
          </condition>
        </activate>
        <inactivate>	MoveToPoint2	  <condition>
            <active>	Object2FocusOn	</active>
          </condition>
        </inactivate>
        <remove-marker>	MarkerForPoint2	</remove-marker>
      </on-effects>
      <off-effects></off-effects>
    </trigger>
    <trigger>	Point3Trigger	  <type>	area	</type>
      <validate-var>	Point3Name	</validate-var>
      <on-effects>
        <activate>	InPoint3	  <condition>
            <active>	InPoint2	</active>
          </condition>
        </activate>
        <remove-marker>	MarkerForPoint3	</remove-marker>
      </on-effects>
      <off-effects></off-effects>
    </trigger>
    <trigger>	Bot1DestroyedTrigger	  <type>	vehDestroyed	</type>
      <validate-var>	Bot1VehicleID	</validate-var>
      <on-effects>
        <activate>	Bot1Destroyed	</activate>
      </on-effects>
      <off-effects>
        <inactivate>	Bot1Destroyed	</inactivate>
      </off-effects>
    </trigger>
    <trigger>	Bot2DestroyedTrigger	  <type>	vehDestroyed	</type>
      <validate-var>	Bot2VehicleID	</validate-var>
      <on-effects>
        <activate>	Bot2Destroyed	</activate>
      </on-effects>
      <off-effects>
        <inactivate>	Bot2Destroyed	</inactivate>
      </off-effects>
    </trigger>
    <trigger>	Bot3DestroyedTrigger	  <type>	vehDestroyed	</type>
      <validate-var>	Bot3VehicleID	</validate-var>
      <on-effects>
        <activate>	Bot3Destroyed	</activate>
      </on-effects>
      <off-effects>
        <inactivate>	Bot3Destroyed	</inactivate>
      </off-effects>
    </trigger>
    <trigger>	GlobalEventsDispatcher	  <type>	dispatcher	</type>
      <includes>
        <trigger>	AIMRObject1Trigger	</trigger>
        <trigger>	AIMRObject2Trigger	</trigger>
        <trigger>	Point1Trigger	</trigger>
        <trigger>	Point2Trigger	</trigger>
        <trigger>	Point3Trigger	</trigger>
        <trigger>	Bot1DestroyedTrigger	</trigger>
        <trigger>	Bot2DestroyedTrigger	</trigger>
        <trigger>	Bot3DestroyedTrigger	</trigger>
      </includes>
    </trigger>
  </triggers>
  <vars>
    <var-set>	Object1Name	  <asString>	object right	</asString>
    </var-set>
    <var-set>	Object2Name	  <asString>	object left	</asString>
    </var-set>
    <var-set-ref>	Point1Name	</var-set-ref>
    <var-set-ref>	Point2Name	</var-set-ref>
    <var-set-ref>	Point3Name	</var-set-ref>
    <var-set-ref>	Bot1Name	</var-set-ref>
    <var-set-ref>	Bot2Name	</var-set-ref>
    <var-set-ref>	Bot3Name	</var-set-ref>
    <var-set-ref>	ImagePath	</var-set-ref>
    <var-set-ref>	DefaultVehicleInImages	</var-set-ref>
  </vars>
</vehicle-control.xml>
